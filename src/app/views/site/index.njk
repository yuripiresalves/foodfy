{% extends "site/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/site/index.css">
  <link rel="stylesheet" href="/styles/site/responsive.css">
  <title>Foodfy</title>
{% endblock head %}

{% block search %}
  <div class="search">
    <form action="/results" method="get">
      <input type="text" name="filter" placeholder="Buscar uma receita" required="required">
      <button type="submit">Buscar</button>
    </form>
  </div>
{% endblock search %}

{% block content %}

  <div class="box">
    <div class="box-content">
      <h1>As melhores receitas</h1>
      <p>
        Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
      </p>
    </div>
    <div class="box-image">
      <img src="/assets/chef.png" alt="Desenho de Chefe">
    </div>
  </div>

  <section>
    <h1>Mais acessadas</h1>
    <div class="cards">

      {% for recipe in recipes %}

        <div class="card" id="{{recipe.id}}">
          <div class="card-image">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
          </div>
          <div class="card-info">
            <h2>{{recipe.title}}</h2>
            <p>por
              {{recipe.chef_name}}</p>
          </div>
        </div>

      {% endfor %}

    </div>
  </section>
{% endblock content %}
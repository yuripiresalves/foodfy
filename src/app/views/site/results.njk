{% extends "site/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/site/recipes.css">
  <title>Busca: {{filter}} | Foodfy</title>
{% endblock head %}

{% block search %}
  <div class="search">
    <form action="/results" method="get">
      <input type="text" name="filter" placeholder="Buscar uma receita">
      <button type="submit">Buscar</button>
    </form>
  </div>
{% endblock search %}

{% block content %}
  <h1>Buscando por "{{filter}}"</h1>
  <main>
    <div class="cards">

      {% for recipe in recipes %}

        <div class="card" id="{{recipe.id}}">
          <div class="card-image">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
          </div>
          <div class="card-info">
            <h2>{{recipe.title}}</h2>
            <p>por
              {{recipe.chef_name}}
            </p>
          </div>
        </div>

      {% endfor %}

    </div>
  </main>

  <div 
    class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
  ></div>

{% endblock content %}
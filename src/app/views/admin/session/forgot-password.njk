{% extends 'admin/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/create.css">
  <title>Esqueceu a senha? | Foodfy</title>
{% endblock head %}

{% block content %}

  <section class="password container form">
    <form action="/admin/forgot-password" method="POST">

      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div class="item">
          <label for="email">E-mail</label>
          <input 
            type="email" 
            id="email"
            name="email" 
            value="{{ user.email }}" 
            placeholder="Digite seu e-mail para recuperar sua senha"
            onblur="Validate.apply(this, 'isEmail')"
          />
        </div>
      </div>

      <div class="footer">
        <button class="button" type="submit">Recuperar</button>
      </div>

    </form>
  </section>

{% endblock content %}
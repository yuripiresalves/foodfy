<div class="item">
  <label for="email">E-mail</label>
  <input 
    type="email" 
    id="email"
    name="email" 
    value="{{ user.email }}" 
    placeholder="Digite seu e-mail"
    onblur="Validate.apply(this, 'isEmail')"
  />
</div>

<div class="item">
  <label for="password">Senha</label>
  <input 
    type="password" 
    id="password"
    name="password" 
    placeholder="Digite sua senha"
  />
</div>
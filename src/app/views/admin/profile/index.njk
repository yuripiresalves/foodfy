{% extends 'admin/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/create.css">
  <title>{{ user.name }} | Foodfy</title>
{% endblock head %}

{% block content %}

  <section class="profile container form">
    <form action="/admin/profile?_method=PUT" method="POST">

      <div class="header">
        <h3>Bem-vindo, {{ user.name }}</h3>
        <div class="buttons">
          <button class="button" type="submit">Salvar</button>
        </div>
      </div>

      <div class="fields">
        {% include 'admin/profile/fields.njk'%}
        <input type="hidden" name="id" value="{{ user.id }}">
      </div>

    </form>
  </section>

{% endblock content %}
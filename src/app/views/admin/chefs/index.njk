{% extends 'admin/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/index.css">
  <title>Admin | Foodfy</title>
{% endblock head %}

{% block content %}

  <div class="container">
    <header class="container__title">
      <h1>Gerenciar chefs</h1>
    </header>

    <section class="container__cards chef">

      {% for chef in chefs %}
        <div class="card chef">
          <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">

          <div class="card__information">
            <h2 class="card__information--title">
              {{ chef.name }}
            </h2>

            <a href="/admin/chefs/{{ chef.id }}" class="card__information--view">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>
  </div>

{% endblock content %}